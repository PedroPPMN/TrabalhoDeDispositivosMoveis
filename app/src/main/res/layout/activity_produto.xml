<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="unifor.br.trabalhodedispositivosmoveis.Produto">

    <EditText
        android:id="@+id/editText6"
        android:layout_width="336dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Valor"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="151dp" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="336dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Tamanho"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="84dp" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="336dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Modelo"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="132dp"
        android:layout_height="36dp"
        android:text="Com Adicional"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="218dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="210dp"
        android:layout_height="29dp"
        tools:layout_editor_absoluteY="271dp"
        app:layout_constraintLeft_toRightOf="@+id/radioButton2"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="140dp"
        android:layout_height="28dp"
        android:layout_marginRight="8dp"
        android:text="Tipo De Costura:"
        app:layout_constraintRight_toLeftOf="@+id/spinner"
        tools:layout_editor_absoluteY="271dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.571"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="337dp"
        android:layout_height="126dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Observações:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/spinner"
        tools:layout_editor_absoluteY="304dp"
        app:layout_constraintHorizontal_bias="0.516"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Adicionar"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="431dp" />

</android.support.constraint.ConstraintLayout>
